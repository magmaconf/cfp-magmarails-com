!!!
%html
  %head
    %title MagmaConf 2017 | Our Call for Papers is now open!
    %meta{name: 'viewport', content: 'initial-scale=1 maximum-scale=1, minimum-scale=1, user-scalable=no'}
    %meta{name: "author", content: "Magma Labs - http://www.magmalabs.io"}
    %meta{content: ' MagmaConf 2017 | Our Call for Papers is now open!', property: 'og:title'}
    %meta{content: 'http://cfp.magmaconf.com', property: 'og:url'}
    %meta{content: 'MagmaConf is one of the best community tech conferences in Mexico. Submit your talk before October 21, 2016 to join our speaker panel!', name: 'description'}
    %meta{content: 'MagmaConf is one of the best community tech conferences in Mexico. Submit your talk before October 21, 2016 to join our speaker panel! ', property: 'og:description'}
    %meta{name: "keywords", content: "magmaconf, magmaconference, magmarails, web development conference, development talk, ruby on rails event, ruby on rails conference, software development conference, UX UI design conference, UX UI design talk, digital conference, technology conference"}
    %meta{content: "#{image_url('preview_CFP2017.jpg')}", property: "og:image"}
    = stylesheet_link_tag    'cfp/application', :media => 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %link{rel: 'stylesheet', href: '//fonts.googleapis.com/css?family=Open+Sans:600,400|Oswald:400,300,700&subset=latin' }
    %link{rel: "shortcut icon", type: "image/vnd.microsoft.icon", href: "#{image_path 'favicon.ico'}"}

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-70774244-2']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  %body
    .landing-main-section
    %section#home-top.container
      .row
        .centered-six
          = link_to 'http://magmaconf.com' do
            = image_tag 'magma_white_logo.png', class: 'magma_logo', alt: 'Magma Conference'
          #sign-in.mask
            = image_tag 'reylero_ok.png', class: 'reylero-ok'
          .our-2nd
            Our 2nd
          .cfp-alternate-img
          .is-now-open
            %span.span-color-1 Is
            %span.span-color-2 Now
            %span.span-color-1 Open 
          .submit-your
            %span.span-text-1 Submit&nbsp; 
            %span.span-text-2 Your 
          .proposal-text
            Proposal
          .before-than
            %span.span-color-3 Before
            %span.span-color-4 October 21
          .cfp-separator-koromiko
          .please-login
            Login with
          .login-buttons
            = link_to "Github", "/auth/github", class: "login_link btn-github"
            = link_to "Google", "/auth/google_oauth2", class: "login_link btn-gmail"
          .cfp-separator-koromiko.mb30
          -#= link_to '#', class: 'check-out' do
            %span.checkout Check out
            %span.what-were-looking what we are looking for
            %span.arrow-->
      = yield

    -#lists.container
      %footer.row
        .centered-six
          %p.closing-date
            = t('closing_date')
            %br
            %strong= t('closing_date_2')

          %p.important-terms
            = t('home.have_question')

          = link_to '#', class: 'check-out' do
            = t('home.check_out')
            %span

        .centered-eight
          = image_tag 'logo_magmalabs.png', class: 'logo'
          .copyright
            &copy;
            = t('copyright')

    =# render 'cfp/application/lists'

    #home-down.container
      .row
        .offset-one.eight-columns.header
          = t('home.about')

        .two-columns.back-to-sign-in
          -#=link_to '#sign-in' do
            %span
            = t('home.back_to_signin')

        %hr.ready-hr

        .offset-one.three-columns.override
          .title= t('popup.magma.title')

          %p=raw t('popup.magma.one')
          %p= t('popup.magma.two')
          %p= t('popup.magma.three')

        .three-columns.override
          .title= t('popup.speakers.title')

          %p= raw t('popup.speakers.one')
          %p= t('popup.speakers.two')
          %p= t('popup.speakers.three')

        .three-columns.override
          .title= t('popup.judges.title')

          %p=raw t('popup.judges.one')
          %p= t('popup.judges.two')
          %p=raw t('popup.judges.three')
          %p= t('popup.judges.four')

      .row
        %hr.last-hr

        .offset-one.seven-columns
          .title= t('popup.topics.title')

          %p=raw t('popup.topics.one')

          %ul
            %li= t('popup.topics.two')
            %li= t('popup.topics.three')
            %li= t('popup.topics.five')
            %li= t('popup.topics.six')
            %li= t('popup.topics.seven')
            %li= t('popup.topics.eight')
            %li= t('popup.topics.nine')
            %li= t('popup.topics.ten')

        .three-columns.sponsors
          .content
            .title= t('popup.sponsors.title')

            %p=raw t('popup.sponsors.one')
            %p=raw t('popup.sponsors.two')

          = form_tag '/send_mail', remote: true, method: :post, id: 'sponsor-form', novalidate: true do
            .required
              %label= t('contact.attributes.name')
              .error.left-arrow
              %input{type: 'text', name: 'name', required: 'true', data: error_messages }
            .required
              %label= t('contact.attributes.company')
              .error.left-arrow
              %input{type: 'text', name: 'company', required: 'true', data: error_messages }
            .required
              %label= t('contact.attributes.email')
              .error.left-arrow
              %input{type: 'email', name: 'email', required: 'true', data: error_messages }
            %input{type: 'submit', value: t('contact.email_me')}

          #sponsor-contact-greeting{style: "display: none"}
            .circle
            .text
              %p.title= raw t("contact.greeting.title")
              %p.body= raw t("contact.greeting.body")

    %footer
      .row.pt30
        .offset-two.two-columns
          .cfp-footer-logo
        .two-columns
          = image_tag 'page-1@2x.png', class: 'magma-footer-logo'
        .two-columns
          %p.info
            = link_to 'info@magmaconf.com', 'mailto:info@magmaconf.com'
        .two-columns
          .social-icons-container
            = link_to '', 'https://www.facebook.com/MagmaConf', target: "_blank", class: 'facebook'
            = link_to '', 'https://twitter.com/magmaconference', target: "_blank",  class: 'twitter'
